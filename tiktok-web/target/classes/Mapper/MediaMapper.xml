<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bjtv.tiktok.Dao.MediaMapper">
    <resultMap id="BaseResultMap" type="com.bjtv.tiktok.Entity.Media.Media">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="user_id" jdbcType="VARCHAR" property="userId" />
        <result column="media_id" jdbcType="VARCHAR" property="mediaId" />
        <result column="resource" jdbcType="VARCHAR" property="resource" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    </resultMap>

    <sql id="base_column">
        user_id,media_id,resource,create_time,update_time
    </sql>

    <insert id="publicMedia" parameterType="com.bjtv.tiktok.Entity.Media.Media">
        insert into tiktok_media(user_id, media_id, resource) values (#{userId}, #{mediaId}, #{resource})
    </insert>

    <select id="getMediaList" resultMap="BaseResultMap">
        select
        <include refid="base_column"/>
        from tiktok_media;
    </select>

    <select id="getMediaById" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="base_column"/>
        from tiktok_media
        where media_id = #{mediaId};
    </select>
</mapper>